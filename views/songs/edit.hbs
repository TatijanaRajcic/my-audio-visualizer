<div class="canvas-container"> 
  <canvas id="visualiser-canvas"></canvas>
</div>

<div class="edit-page">

  <div class="edit-content-container">

    <div class="controls-dashboard">
      <div class="controls">
        <input type="button" id="start_button" value="Start">
        <input type="button" id="stop_button" value="Stop">
      </div>
    </div>

    <div class="creative-dashboard">
      <h1>Creative dashboard</h1>
      <div>
        <select name="type-visual" class="type-visual">
          <option value="lines" default>lines</option>
          <option value="bars">bars</option>
        </select>
      </div>
      <div>
        <input type="color" id="color-visual" value="#00CCFF">
      </div>
    </div>

    <div class="music-dashboard">
      <h1>Music dashboard</h1>
      <form action="/edit/{{songId}}" method="post">
        <div class="playback-container">
          <input class="playback-rate-control" name="playback" type="range" min="0" max="5" step="0.05" value="1">
          <span class="playback-rate-value">1.0</span>
        </div>
        <input class="screenshot" name="src" value="" hidden>
        <div>
          <button type="submit" class="btn-link" id="save_button">Save effects</button>
        </div>
      </form>
    </div>

    <div class="submit-dashboard">
      <form action="/show/{{songId}}">
        <button type="submit" class="btn-link">Listen all versions</button>
      </form>
    </div>

  </div>

</div>

<script>
  var songPath = "{{songPath}}"
</script>
<script src="/javascript/visualiser.js"></script>