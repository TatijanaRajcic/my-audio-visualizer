<div class="show-song-container main">
  <div class="song-img">
    <img src="{{image}}" alt="">
  </div>
  <p class="playback" value="{{playback}}">Playback rate: {{playback}}</p>
  <p class="path" value="{{path}}" hidden>{{path}}</p>
  <div class="controls-song">
    <input type="button" class="start_button_details" value="start">
    <input type="button" class="stop_button_details" value="stop">
    <button class="delete-btn"><a href="/delete/{{id}}/{{songId}}">X</a></button>
  </div>
</div>

