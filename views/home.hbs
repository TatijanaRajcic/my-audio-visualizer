<h1>Sound Editing Experience</h1>
<p>Description</p>


{{#if currentUser}}

<div class="homePanel">

<div>
<h2>SEARCH</h2>
  <form action="/" method="post">
      <input class="queryInput" type="text" name="searched">
      <input class="duration" type="number" name="duration" value="60" style="display: none">
      <select name="sort" style="display: none">
        <option value="score" selected>Sort</option>       
      </select>
      <button class="queryBtn">SEARCH</button>
  </form>
  <br>
</div>

<div>
  <h2>UPLOAD</h2>
  <div class="form-container"></div>
    <form action="/add" method="POST" enctype="multipart/form-data">
      <input type="file" name="song">
      <button type="submit">Done!</button>
    </form>
  </div>
</div>

</div>

{{else}}

<div class="homePanel">

<div>
  <button><a href="/login">Log in</a></button>
</div>
<div>
  <button><a href="/signup">Sign up</a></button>
</div>

</div>

{{/if}}
